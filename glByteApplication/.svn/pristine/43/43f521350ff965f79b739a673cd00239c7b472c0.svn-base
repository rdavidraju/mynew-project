<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="now()" dbms="mysql"/>
    <property name="autoIncrement" value="true"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity SourceProfileFileAssignments.
    -->
    <changeSet id="20170615074343-1t" author="jhipster">
        <createTable tableName="t_source_profile_file_assignments">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="source_profile_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="file_name_format" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="file_description" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="file_extension" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="frequency_type" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="due_time" type="varchar(5)">
                <constraints nullable="true" />
            </column>

            <column name="day" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="source_directory_path" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="local_directory_path" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="template_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="enabled_flag" type="bit">
                <constraints nullable="true" />
            </column>

            <column name="created_by" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="created_date" type="timestamp">
                <constraints nullable="true" />
            </column>

            <column name="last_updated_by" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="last_updated_date" type="timestamp">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        <dropDefaultValue tableName="t_source_profile_file_assignments" columnName="created_date" columnDataType="datetime"/>
        <dropDefaultValue tableName="t_source_profile_file_assignments" columnName="last_updated_date" columnDataType="datetime"/>
        
    </changeSet>
    
    <changeSet author="kiran" id="ColumnHold">
    <addColumn   tableName="t_source_profile_file_assignments">
        <column name="hold" type="bit"/>
    </addColumn>
</changeSet>
    
    
</databaseChangeLog>
