<div class="sub-side-navbar datViewSidePad sideBar-top-styles" >
	<perfect-scrollbar style="height: auto; width:100%; overflow-x: auto;">
		<p-accordion>
			<p-accordionTab header="{{connectionlist.dispname}} ({{connectionlist.count}})" [selected]="connectionlist.firstOpened" *ngFor="let connectionlist of sideBarData; let i = index">
				<perfect-scrollbar style="height: auto; width:100%; overflow-x: auto; max-height:160px;">
					<ul style="padding-left: 13px;">
						<li *ngFor="let connection of connectionlist.Lists; let j = index" routerLinkActive="router-link-active">
							<div class="selecteditem hand ripple" [routerLink]="['/source-connection-details', {outlets: {'content': [connection.id]+'/details'}}]">
								<span>{{connection.name}}</span>
							</div>
						</li>
					</ul>
				</perfect-scrollbar>
			</p-accordionTab>
		</p-accordion>
	</perfect-scrollbar>
</div>