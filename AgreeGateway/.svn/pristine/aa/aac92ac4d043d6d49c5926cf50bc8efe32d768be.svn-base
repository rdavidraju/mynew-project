import { Component, OnInit, OnDestroy } from '@angular/core';
import { ActivatedRoute } from '@angular/router';
import { Response } from '@angular/http';

import { Observable } from 'rxjs/Rx';
import { NgbActiveModal, NgbModalRef } from '@ng-bootstrap/ng-bootstrap';
import { JhiEventManager, JhiAlertService } from 'ng-jhipster';

import { RuleUsages } from './rule-usages.model';
import { RuleUsagesPopupService } from './rule-usages-popup.service';
import { RuleUsagesService } from './rule-usages.service';

@Component({
    selector: 'jhi-rule-usages-dialog',
    templateUrl: './rule-usages-dialog.component.html'
})
export class RuleUsagesDialogComponent implements OnInit {

    ruleUsages: RuleUsages;
    isSaving: boolean;

    constructor(
        public activeModal: NgbActiveModal,
        private alertService: JhiAlertService,
        private ruleUsagesService: RuleUsagesService,
        private eventManager: JhiEventManager
    ) {
    }

    ngOnInit() {
        this.isSaving = false;
    }

    clear() {
        this.activeModal.dismiss('cancel');
    }

    save() {
        this.isSaving = true;
        if (this.ruleUsages.id !== undefined) {
            this.subscribeToSaveResponse(
                this.ruleUsagesService.update(this.ruleUsages));
        } else {
            this.subscribeToSaveResponse(
                this.ruleUsagesService.create(this.ruleUsages));
        }
    }

    private subscribeToSaveResponse(result: Observable<RuleUsages>) {
        result.subscribe((res: RuleUsages) =>
            this.onSaveSuccess(res), (res: Response) => this.onSaveError(res));
    }

    private onSaveSuccess(result: RuleUsages) {
        this.eventManager.broadcast({ name: 'ruleUsagesListModification', content: 'OK'});
        this.isSaving = false;
        this.activeModal.dismiss(result);
    }

    private onSaveError(error) {
        try {
            error.json();
        } catch (exception) {
            error.message = error.text();
        }
        this.isSaving = false;
        this.onError(error);
    }

    private onError(error) {
        this.alertService.error(error.message, null, null);
    }
}

@Component({
    selector: 'jhi-rule-usages-popup',
    template: ''
})
export class RuleUsagesPopupComponent implements OnInit, OnDestroy {

    routeSub: any;

    constructor(
        private route: ActivatedRoute,
        private ruleUsagesPopupService: RuleUsagesPopupService
    ) {}

    ngOnInit() {
        this.routeSub = this.route.params.subscribe((params) => {
            if ( params['id'] ) {
                this.ruleUsagesPopupService
                    .open(RuleUsagesDialogComponent as Component, params['id']);
            } else {
                this.ruleUsagesPopupService
                    .open(RuleUsagesDialogComponent as Component);
            }
        });
    }

    ngOnDestroy() {
        this.routeSub.unsubscribe();
    }
}
