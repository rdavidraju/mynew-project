
/* ==========================================================================
ngPrime Table 
========================================================================== */
.ui-datatable tbody > tr.ui-widget-content {
    background-color: #fafafb;
     border-color: #d9d9d9;
     height: 35px;
}

.ui-datatable .ui-datatable-thead>tr>th, .ui-datatable .ui-datatable-tfoot>tr>td, .ui-datatable .ui-datatable-data>tr>td {
    border-width: 0px;
}

.ui-datatable tbody > tr.ui-widget-content.ui-datatable-odd, .ui-datatable tbody > tr.ui-widget-content.ui-datatable-even {
    background-color: #ffffff;
    
}
    .line-edit-action,
    .line-delete-action,
    .line-close-action{
        display: none;
    }

.ui-datatable tbody tr {
	&:hover{
          .line-edit-action,
          .line-delete-action{
                display:inline-block;
            }
    	// -webkit-box-shadow: inset 0px -4px 6px 0px rgba(168,168,168,1);
        // -moz-box-shadow: inset 0px -4px 6px 0px rgba(168,168,168,1);
        // box-shadow: inset 0px -4px 6px 0px rgba(168,168,168,1);
        -webkit-box-shadow: inset 0px -3px 6px 0px rgba(224,224,224,1);
-moz-box-shadow: inset 0px -3px 6px 0px rgba(224,224,224,1);
box-shadow: inset 0px -3px 6px 0px rgba(224,224,224,1);
        
    }
    
}

.ui-datatable tbody > tr.ui-widget-content.ui-state-highlight {
    background-color: #2197ad !important;
    color: #FFFFFF !important;
}

.ui-datatable tbody > tr.ui-widget-content {
    border-left-color: #ecebeb;
    border-right-color: #ecebeb;
    border-top: 1px solid lightgray;
    border-bottom: 1px solid lightgray;
}

.ui-datatable .ui-datatable-thead>tr>th, .ui-datatable .ui-datatable-tfoot>tr>td {
    font-weight: bold !important;
}

.navbar-inverse .navbar-nav .nav-link {
    color: rgba(255, 255, 255, 1);
}

/* jhipster-needle-scss-add-main JHipster will add new css style */


.ui-chkbox-box.ui-state-active, .ui-radiobutton-box.ui-state-active {
    border: 1px solid #7495a6 !important;
    background: #7495a6 !important;
    color: #FFFFFF;
}

.ui-widget-header .ui-state-highlight, .ui-widget-content .ui-state-highlight, .ui-state-highlight {
    background: #7495a6;
    color: #FFFFFF;
}

.ui-multiselect .ui-multiselect-trigger {
    border-right: 0 !important;
    border-top: 0 !important;
    border-bottom: 0 !important;
    cursor: pointer !important;
    /*width: 1.5em;
    height: 100%;*/
    position: absolute !important;
    right: 0 !important;
    top: 0px !important;
    padding-left: 30px !important;
    font-size: 28px !important;
}
.ui-multiselect .ui-multiselect-trigger .fa-caret-down:before{
    content: "\F142" !important;
}
.ui-multiselect .ui-multiselect-label  {
    display: none !important;
    padding: .25em 2em .25em .25em;
    width: auto;
    border: none;
    cursor: pointer;
    text-overflow: ellipsis;
    overflow: hidden;
}
.ui-multiselect .ui-multiselect-trigger .fa{
	margin-top: .4em;
	margin-left: 0.175em;
}

.reconcile-main .ui-multiselect .ui-multiselect-trigger .fa,
.accounting-main .ui-multiselect .ui-multiselect-trigger .fa{
    margin-left: -15px;
}

.ui-datatable .ui-datatable-thead > tr > th{
    text-align: left;
}

.source-view-table {
    .ui-datatable-resizable {
        overflow: visible !important;
    }

    .ui-datatable-thead {
        position: sticky !important;
        position: -webkit-sticky;
        position: -moz-sticky;
        position: -ms-sticky;
        position: -o-sticky;
        z-index: 100;
    }
}

.file-template-datatable {
    padding:0 20px;
    .ui-datatable-unfrozen-view {
        display: block;
        overflow-x: auto;
        right:0;
        
        th ,td {
            white-space: nowrap;
            overflow: hidden;
        }
    }
}
//Show/Hide Checboxes
.ui-multiselect-panel .ui-widget-content .ui-state-highlight, .ui-state-highlight {
    background: #ffffff;
    color: #555555;
}

.ui-multiselect-panel .ui-chkbox-box.ui-state-active {
	background: #ebedf0 !important;
    color: #555555;
    border-color: lightgray !important;	
}

.ui-multiselect-panel .ui-multiselect-item:not(.ui-state-highlight) {
	border-bottom: 1px solid rgba(211, 211, 211, 0.5);	
	color: #555555;
}

.ui-multiselect-panel .ui-multiselect-item:not(.ui-state-highlight):hover {
	border-color: lightgray !important;
}

//Sidebar List Hover
.sourcebody .selecteditem:hover {
    background: #ebedf0;
    color: black;
}
